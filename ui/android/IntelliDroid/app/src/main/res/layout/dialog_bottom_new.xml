<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="intellibitz.intellidroid.MainActivity">

    <LinearLayout
        android:id="@+id/new_bottom_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="?android:attr/windowBackground"
        android:elevation="16dp"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="300dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <!--
                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nsv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="?android:attr/windowBackground"
                        android:elevation="16dp"
                        android:minHeight="128dp"
                        android:orientation="vertical"
                        app:behavior_hideable="false"
                        app:behavior_peekHeight="128dp"
                        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
        -->

        <TextView
            android:id="@+id/create"
            style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/create"
            android:navigationIcon="@drawable/ic_dialog_close_light"
            android:textColor="@color/primary"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/graylte" />

        <Button
            android:id="@+id/new_chat"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="start|bottom"
            android:hint="@string/new_chat"
            android:textColor="@color/primary"
            android:visibility="visible" />

        <Button
            android:id="@+id/new_group"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/new_group"
            android:textColor="@color/primary"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/graylte" />

        <Button
            android:id="@+id/new_email"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="start|bottom"
            android:hint="@string/compose_email"
            android:textColor="@color/primary"
            android:visibility="visible" />

        <!--
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
        -->
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
