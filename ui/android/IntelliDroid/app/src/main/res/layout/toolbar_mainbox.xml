<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tb_mainbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_3"
    android:gravity="top"
    android:theme="@style/AppTheme.ActionBar"
    app:layout_scrollFlags="scroll|enterAlways|snap">
    <!--android:paddingTop="@dimen/nav_top"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rg_badge_mainbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_badge_people"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tab_mainbadge"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text=" 20 "
                        android:textColor="@color/white"
                        android:textOff=""
                        android:textOn=""
                        android:textStyle="bold" />

                    <!--
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />
                    -->

                    <RadioButton
                        android:id="@+id/rb_badge_inbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tab_mainbadge"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text=" 99125 "
                        android:textColor="@color/white"
                        android:textOff=""
                        android:textOn=""
                        android:textStyle="bold" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_tb_mainbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/tab_mainbox"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/people"
                        android:textColor="@color/tab_mainbox"
                        android:textOff=""
                        android:textOn="" />

                    <!--
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />
                    -->

                    <RadioButton
                        android:id="@+id/rb_inbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/tab_mainbox"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/inbox"
                        android:textColor="@color/tab_mainbox"
                        android:textOff=""
                        android:textOn="" />
                </RadioGroup>
            </LinearLayout>

            <!--
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
            -->

            <!--<include layout="@layout/tab_expand_overflow" />-->
            <LinearLayout
                android:id="@+id/ll_tb_mainbox_people_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_filter"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_roundrect_white"
                    android:text="3"
                    android:visibility="gone" />

                <ToggleButton
                    android:id="@+id/tb_filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_numberdeco_gray_layer"
                    android:button="@android:color/transparent"
                    android:drawableEnd="@drawable/people_filter_toggle"
                    android:drawableRight="@drawable/people_filter_toggle"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textColor="@drawable/people_filter_toggle"
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>
        </LinearLayout>

        <!--<include layout="@layout/msgsgrppeople_filter" />-->
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>
